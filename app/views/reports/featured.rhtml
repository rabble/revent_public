document.write(' <div id="report-widget"> <% @reports.each do |report| -%> <div style="display: block;width: 100%; float:left;"> <% if report.embeds.any?{|e| e.youtube_video_id} or report.attachments.any? -%> <div class="report-widget-image" style="float:left;margin:10px"> <% if report.embeds.any? -%> <% embed = report.embeds.select{|e| e.youtube_video_id}.first -%> <%= link_to(image_tag(embed.youtube_thumbnail_url), :permalink => @calendar.permalink, :controller => "reports", :action => "show", :event_id => report.event.id, :only_path=>false) %> <% elsif report.attachments.any? -%> <%= link_to(image_tag(report.attachments.first.public_filename(:list)), :permalink => @calendar.permalink, :controller => "reports", :action => "show", :event_id => report.event.id, :only_path => false) %> <% end -%> </div> <% end -%> <div class="report-widget-title"> <%= link_to "#{report.event.city}, #{report.event.state}", :permalink => @calendar.permalink, :controller => "reports", :action => "show", :event_id => report.event.id, :only_path=>false %> </div> <div class="report-widget-text"> <%= truncate(simple_format(report.text).gsub(/\n/,'').gsub(/'/, '&#146;'), 180) %> </div> </div> <br/> <% end -%> </div>');
