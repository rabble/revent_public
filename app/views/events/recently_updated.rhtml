<%= render :partial => 'nav' %>
<div id='detail-container'>
	<div class="intro-title">
	  Recently added <%= @calendar.name.pluralize %>
	</div>
<hr>	
<div class='pagination-footer'>
  <%= will_paginate @events %>
</div>
  <br />
  <% unless @events.empty? -%>
    <%= render :partial => 'list_item', :collection => @events %>
  <% else -%>
    No recently added events. Would you like to <%= link_to 'create one', signup_url(:permalink => @calendar.permalink) %>?
  <% end -%>
  <br /><div class='pagination-footer'>
    <%= will_paginate @events %>
  </div>
</div>
